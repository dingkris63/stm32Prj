{
  "version": "2.0.0",
  "inputs": [
    {
      "id": "target",
      "type": "pickString",
      "description": "Select build target:",
      "options": [
        "beep",
        "led",
        "all"
      ],
      "default": "beep"
    }
  ],
  "tasks": [
    {
      "label": "build-target",
      "type": "shell",
      "command": "cmake.exe",
      "args": [
        "-B", "${workspaceFolder}/build",
        "-S", "${workspaceFolder}",
        "-G", "Ninja",
        "-DTARGET=${input:target}",
        "&&",
        "cmake.exe", "--build", "${workspaceFolder}/build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}